{
    "files.trimTrailingWhitespace": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "git.confirmSync": false,
    "window.zoomLevel": 0,
    "python.linting.pylintUseMinimalCheckers": false,
    "gitlens.codeLens.enabled": false,
    "yaml.customTags": [
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap sequence",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Join sequence"
    ],
    "yaml.format.enable": true,
    "editor.tabSize": 2
}
